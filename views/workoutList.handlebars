<div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <table class="table table-hover table-dark" style="width:90% text-align: center">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each workoutData}}
                        <tr class="workoutRow" id={{this.id}}>
                            <td>{{this.workoutName}}</td>
                            <td>{{this.workoutType}}</td>
                            <td>{{this.workoutDes}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <form>
                    <select class=searchType>
                        
                    </select>
 
<div class="input-group md-form form-sm form-2 pl-0">
    <input id="searchBar" class="form-control my-0 py-1 orange-border" type="text" placeholder="Search" aria-label="Search">
    <div class="input-group-append">
        <span class="input-group-text orange lighten-3" id="basic-text1"><i class="fa fa-search text-grey" aria-hidden="true"></i></span>
    </div>
</div>                   
    
</div>
<script>
    $(".workoutRow").click(function(event){
        event.preventDefault()
    var workoutId = $(".workoutRow").attr("id")
    console.log(workoutId)
    location.replace("/workouts/ind/" + workoutId)
})
</script>
<script>
    $("#searchSubmit").click(function(event){
        event.preventDefault()
        var workoutName = $(".searchType").val();
        var searchBar = $("#searchBar").val();
        console.log(workoutName);
        if (workoutName === "type")
          location.replace("/workouts/type/");
        else 
          location.replace("/workouts/name/" + searchBar); 
        
    });
</script>