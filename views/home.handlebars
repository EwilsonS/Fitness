
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <img src="/images/gym-banner-placehoder.jpg" class="img-fluid" alt="Responsive image">
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-md-3">
            <form class="bmiCalc">
                <h2>BMI Calculator</h2>
                <div class="form-group form-row align-items-center">
                    <label>Height</label>
                    <input type="number" class="form-control" id="heightft" placeholder="feet">
                    <input type="number" class="form-control" id="heightIn" placeholder="inches" )>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Weight</label>
                    <input type="number" class="form-control" id="weight" placeholder="lbs">
                </div>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
            <div class="bmiResult" style="color: green"></div>
        </div>
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-header">
                    <p id="quotes">{{quotes}}</p>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Workouts</h5>
                    <p class="card-text dataDump">
                        {{data}}
                    </p>
                    <a href="#" class="btn btn-success">Start</a>
                </div>
                <div class="card-footer text-muted">

                </div>
            </div>

        </div>
    </div>
</div>
</div>